{
  "name": "toga-css",
  "version": "0.1.3",
  "description": "A CSS inline documentation-block parser.",
  "keywords": [
    "togaplugin",
    "parser",
    "css",
    "hologram",
    "kalei",
    "kss",
    "styledocco"
  ],
  "homepage": "https://github.com/togajs/toga-css",
  "bugs": "https://github.com/togajs/toga-css/issues",
  "license": "MIT",
  "author": "Shannon Moeller <me@shannonmoeller.com> (http://shannonmoeller.com)",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/togajs/toga-css.git"
  },
  "scripts": {
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "test": "gulp test"
  },
  "dependencies": {
    "mtil": "^0.1.3",
    "tunic": "^0.3.0"
  },
  "devDependencies": {
    "babel": "^5.1.13",
    "coveralls": "^2.11.2",
    "eslint": "^0.20.0",
    "expect": "^1.6.0",
    "isparta": "^3.0.3",
    "mocha": "^2.2.4",
    "nodemon": "^1.3.7",
    "stream-array": "^1.1.0",
    "vinyl-fs": "^1.0.0"
  },
  "scripts": {
    "build": "babel index.js --out-file dist/index.js",
    "cover": "babel-node ./node_modules/.bin/isparta cover --include index.js --reporter text --reporter lcov ./node_modules/.bin/_mocha -- test/*.js",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "lint": "eslint index.js test/*.js",
    "test": "npm run lint && npm run cover",
    "watch": "nodemon --exec 'npm run test' --watch index.js --watch test"
  }
}
